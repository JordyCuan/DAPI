    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app"
            ],
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Migrate",
            "type": "python",
            "request": "launch",
            "module": "alembic",
            "args": [
                "upgrade",
                "head"
            ],
            "justMyCode": false
        },
        {
            "name": "Test",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--rootdir",
                "${workspaceFolder}/",
                "-s",
                "--cache-clear",
                "--disable-warnings",
                // ==>> Module!
                "tests/test_services/test_news.py::TestNewsService::test_create_news_post_on_success"
                // "tests",
                // ==>> Coverage!
                // --cov-report term-missing --cov=./ --cov-config=pytest-cov.ini
            ],
            "justMyCode": false,
            "console": "integratedTerminal",
            "env": {
            },
        }
    ]
}
